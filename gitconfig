[user]
	name = scheakur
	email = scheakur@gmail.com
[core]
	excludesfile = ~/.gitignore
	editor = vim --noplugin
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[github]
	user = scheakur
[alias]
	br = branch
	ci = commit
	cia = commit -a
	ciav = commit -av
	civ = commit -v
	co = checkout
	di = diff -w
	dic = diff -w --cached
	div = difftool --gui --no-prompt
	lg = log --color --graph --pretty=format:'%C(green)%h%Creset %C(cyan)(%cd) %Creset%C(blue)<%an>%Creset%C(yellow)%d%Creset %s' --date=local --abbrev-commit
	s = status -s
	st = status
	svn-ref = "!f() { ret=''; for rev in $@; do ret=${ret}' '`git log --grep "git-svn-id.*@${rev}" --pretty=%H;`; done; echo $ret; }; f"
	svnci = !git svn fetch --localtime && git svn rebase --local && git svn dcommit --no-rebase
	svnco = svn clone --localtime
	svnup = !git stash && git svn fetch --localtime && git svn rebase --local && git stash pop
	update-remote = remote update --prune
[color]
	ui = auto
[diff]
	tool = vimdiff
	guitool = gvimdiff
	algorithm = histogram
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[ghq]
	root = ~/src
[push]
	default = simple
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
